filetype plugin indent on
syntax on

set backspace=indent,eol,start
set nu

" make tab into spaces
set expandtab
set shiftwidth=4
" tab size
set softtabstop=2
set autoindent

" enable mouse usage
set mouse=n
set ttymouse=xterm2

" split windows to the right
set splitright

set hlsearch
set smartcase
set incsearch
